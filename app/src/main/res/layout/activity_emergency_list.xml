<LinearLayout xmlns:android= "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools= "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Emergency Activity List"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/generalEmergency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="general emergency"
        android:text="General Emergency" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/secondView"
            android:layout_alignEnd="@+id/secondView">

            <ImageButton
                android:id="@+id/emergency1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="emergency1"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageButton
                android:id="@+id/emergency3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:tag="emergency3"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageButton
                android:id="@+id/emergency5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="emergency5"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <View
            android:id="@+id/secondView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/thirdLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/secondView"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/emergency2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="emergency2"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageButton
                android:id="@+id/emergency4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="emergency4"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageButton
                android:id="@+id/emergency6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="emergency6"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>